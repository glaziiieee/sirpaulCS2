rules_version = '2';

service cloud.firestore {
  match /databases/{database}/documents {
    // Allow public read access to emigrant data
    match /emigrantData/{document=**} {
      allow read: if true;
      allow write: if true; // Allow writes for CSV upload functionality
    }
    
    // Allow public read access to uploaded CSV files collection
    match /uploadedCSVFiles/{document=**} {
      allow read: if true;
      allow write: if true; // Allow writes for CSV upload functionality
    }
    
    // Block access to old users collection (no longer needed without auth)
    match /users/{document=**} {
      allow read, write: if false;
    }
    
    // Deny everything else by default
    match /{document=**} {
      allow read, write: if false;
    }
  }
}

